<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence" xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="primary">
    <!-- The datasource is deployed as <EAR>/META-INF/coopuni-ds.xml, you
       can find it in the source at ear/src/main/application/META-INF/coopuni-ds.xml -->
    <jta-data-source>java:jboss/datasources/coopuniDS</jta-data-source>
    <properties>
      <!-- Properties for Hibernate -->
      <property name="hibernate.hbm2ddl.auto" value="create-drop" />
      <property name="hibernate.show_sql" value="false" />
    </properties>
  </persistence-unit>
</persistence>
